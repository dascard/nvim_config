-- lua/plugins/mason-core.lua
-- Mason 包管理器 - 原生 LSP 模式时启用
return {
    "williamboman/mason.nvim",
    lazy = true,
    event = vim.g.use_native_lsp and { "BufReadPre", "BufNewFile" } or {},
    cmd = { "Mason", "MasonInstall", "MasonUpdate" },
    config = function()
        require("mason").setup({
            ui = {
                border = "rounded",
                icons = {
                    package_installed = "✓",
                    package_pending = "➜",
                    package_uninstalled = "✗",
                },
            },
        })
    end,
}
